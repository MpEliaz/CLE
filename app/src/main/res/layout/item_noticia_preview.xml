<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ext="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Medium Text"
        android:id="@+id/titulo_noticia"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="3dp"
        android:textSize="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_thumbnail"
            android:layout_width="120dp"
            android:layout_height="90dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/resumen_noticia"
            android:lines="5"
            android:ellipsize="end"
            android:maxLines="5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="top|left" />

<!--
        <com.bluejamesbond.text.DocumentView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:id="@+id/resumen_noticia"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="top|left"
            ext:documentView_maxLines="5"
            ext:documentView_antialias="true"
            ext:documentView_cacheConfig="auto_quality"
            ext:documentView_textAlignment="justified"
            ext:documentView_textColor="#494949"
            ext:documentView_textFormat="formatted"/>
-->

    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>