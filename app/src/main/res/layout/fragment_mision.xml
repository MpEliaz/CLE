<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" tools:context=".fragments.Mision"
    android:background="@drawable/fondo_mision1"
    android:orientation="vertical"
    android:paddingLeft="25dp">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:id="@+id/imageView2"
            android:src="@drawable/mision"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Gestionar el proceso de desarrollo del liderazgo a nivel institucional."
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textStyle="italic"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tareas Fundamentales:"
                android:id="@+id/textView3"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1.- Planificar y realizar mejora continua a los procesos que desarrolla el CLE."
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.- Asesorar en el ámbito directivo para el levantamiento de las políticas de liderazgo institucionales. "
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="3.- Realizar medición, fortalecimiento y seguimiento de los niveles de atributos y competencias de liderazgo a los integrantes de la Institución."
                android:id="@+id/textView6"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4.- Promover y apoyar el desarrollo y crecimiento progresivo de los atributos y competencias de liderazgo en los integrantes del Ejército en los procesos de instrucción y entrenamiento y capacitación y docencia."
                android:id="@+id/textView7"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="5.- Investigar y desarrollar conocimiento en el área de liderazgo."
                android:id="@+id/textView8"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="6.- Disponer de una plataforma tecnológica eficiente y escalable que sirva a las necesidades del CLE. "
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
